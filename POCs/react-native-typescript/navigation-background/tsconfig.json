{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "lib": ["es6", "ES2021.String"],
    "moduleResolution": "node",
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "target": "esnext",
    "types": ["jest"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "_app/*": ["./src/app/*"],
      "_core/*": ["./src/app/core/*"],
      "_auth/*": ["./src/app/auth/*"],
      "_wallet/*": ["./src/app/wallet/*"],
      "_transactions/*": ["./src/app/transactions/*"],
      "_assets/*": ["./src/assets/*"],
      "_components/*": ["./src/components/*"],
      "_atoms/*": ["./src/components/atoms/*"],
      "_atoms": ["./src/components/atoms/index.ts"],
      "_molecules/*": ["./src/components/molecules/*"],
      "_molecules": ["./src/components/molecules/index.ts"],
      "_organisms/*": ["./src/components/organisms/*"],
      "_organisms": ["./src/components/organisms/index.ts"],
      "_templates/*": ["./src/components/templates/*"],
      "_templates": ["./src/components/templates/index.ts"],
      "_constants": ["./src/constants/*", "./src/constants/index.ts"],
      "_styles/*": ["./src/styles/*"],
      "_themes": ["./src/styles/themes/*", "./src/styles/themes/index.ts"],
      "_utils": ["./src/utils/index.ts"],
      "_utils/*": ["./src/utils/*"],
      "_languages": ["./src/i18n/index.ts"],
      "_interfaces/*": ["./src/interfaces/*"],
      "_types/*": ["./src/types/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "@tsconfig/react-native/tsconfig.json"
}
